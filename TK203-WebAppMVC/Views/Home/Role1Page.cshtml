@{
    ViewData["Title"] = "Role1 Page";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-user-shield"></i> Role1 Exclusive Page
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">
                            <i class="fas fa-check-circle"></i> Access Granted!
                        </h4>
                        <p>Welcome <strong>@User.Identity!.Name</strong>! You have successfully accessed the Role1 page.</p>
                        <hr>
                        <p class="mb-0">This page is only accessible to users with the <code>role1</code> role.</p>
                    </div>
                    
                    <div class="mt-4">
                        <h5>What you can do here:</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <i class="fas fa-cog text-primary"></i> 
                                Access administrative functions
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-users text-primary"></i> 
                                Manage user accounts
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-chart-bar text-primary"></i> 
                                View detailed reports
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-database text-primary"></i> 
                                Access system configurations
                            </li>
                        </ul>
                    </div>
                    
                    <div class="mt-4">
                        <h6>Your Authentication Details:</h6>
                        <table class="table table-sm">
                            <tr>
                                <td><strong>User Name:</strong></td>
                                <td>@User.Identity.Name</td>
                            </tr>
                            <tr>
                                <td><strong>Authentication Type:</strong></td>
                                <td>@User.Identity.AuthenticationType</td>
                            </tr>
                            <tr>
                                <td><strong>Is Authenticated:</strong></td>
                                <td>@User.Identity.IsAuthenticated</td>
                            </tr>
                            <tr>
                                <td><strong>Has Role1:</strong></td>
                                <td>@User.IsInRole("role1")</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Home
                    </a>
                    @if (User.IsInRole("role2"))
                    {
                        <a asp-action="Role2Page" class="btn btn-success">
                            <i class="fas fa-arrow-right"></i> Visit Role2 Page
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>